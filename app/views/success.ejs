<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Success</title>
    <link rel="stylesheet" href="//stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container text-center mt-5">
        <h2>Account Successfully Created!</h2>
        <br>
        <br>
        <!-- Employee Details -->
        <h4>Employee Details</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Title</th>
                    <th>Team</th>
                    <th>Location</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= newEmployee.fullName %></td>
                    <td><%= newEmployee.title %></td>
                    <td><%= newEmployee.team %></td>
                    <td><%= newEmployee.location %></td>
                </tr>
            </tbody>
        </table>
        <br>
        <br>
        <br>
        <!-- Tasks Associated with Employee -->
        <h4>Associated Tasks</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Employee</th>
                    <th>Task Name</th>
                    <th>Task Status</th>
                </tr>
            </thead>
            <tbody>
                <% tasks.forEach(function(task) { %>
                    <tr>
                        <td><%= task.employeeName %></td>
                        <td><%= task.taskName %></td>
                        <td><%= task.taskStatus %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <br>
        <br>
        <a href="/" class="btn btn-primary">Back to Home</a>
    </div>
</body>
</html>
