<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Create Account</title>
    <link rel="stylesheet" href="//stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="//stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script>
        function validateForm(event) {
            const fields = ['firstName', 'lastName', 'title', 'team', 'location'];
            let isValid = true;

            fields.forEach(field => {
                const input = document.getElementById(field);
                const errorField = document.getElementById(`${field}-error`);
                if (!input.value || (field === 'location' && input.value === 'select')) {
                    isValid = false;
                    input.classList.add('is-invalid');
                    errorField.textContent = 'Please fill in this field';
                } else {
                    input.classList.remove('is-invalid');
                    errorField.textContent = '';
                }
            });

            if (!isValid) {
                event.preventDefault();
            }
        }
    </script>
</head>

<body>
    <div class="container m-5 p-2 rounded mx-auto bg-light shadow">

        <!-- App title section -->
        <div class="row m-1 p-4">
            <div class="col">
                <div class="p-1 h1 text-primary text-center mx-auto display-inline-block">
                    <u>Create Account for New Employee</u>
                </div>
            </div>
        </div>

        <!-- Form section -->
        <div class="row m-1 p-3">
            <div class="col col-11 mx-auto">
                <form method="POST" action="/create_employee" autocomplete="off" onsubmit="validateForm(event)">
                    <!-- First Name -->
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Enter First Name">
                        <small id="firstName-error" class="form-text text-danger"></small>
                    </div>

                    <!-- Last Name -->
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Enter Last Name">
                        <small id="lastName-error" class="form-text text-danger"></small>
                    </div>

                    <!-- Title -->
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title" placeholder="Enter Title">
                        <small id="title-error" class="form-text text-danger"></small>
                    </div>

                    <!-- Team -->
                    <div class="form-group">
                        <label for="team">Team</label>
                        <input type="text" class="form-control" id="team" name="team" placeholder="Enter Team">
                        <small id="team-error" class="form-text text-danger"></small>
                    </div>

                    <!-- Location -->
                    <div class="form-group">
                        <label for="location">Location</label>
                        <select class="form-control" id="location" name="location">
                            <option value="select">Select</option>
                            <option value="Raffles City Tower">Raffles City Tower</option>
                            <option value="Revenue House">Revenue House</option>
                            <option value="Haw Par Technocentre">Haw Par Technocentre</option>
                        </select>
                        <small id="location-error" class="form-text text-danger"></small>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary btn-block">Create New Account</button>
                </form>
            </div>
        </div>
    </div>
</body>

</html>
